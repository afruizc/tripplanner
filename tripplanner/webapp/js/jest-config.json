{
    "verbose": true,
    "modulePaths": [
        "<rootDir>/src",
        "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
        "js",
        "vue",
        "json"
    ],
    "transform": {
        "^.+\\.js$": "babel-jest",
        ".*\\.(vue)$": "vue-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)x?$",
    "setupFiles": [
        "<rootDir>/test/jest-pretest.js"
    ],
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.{vue,js}",
        "!**/*.spec.{js,ts}",
        "!**/node_modules/**",
        "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
        "html"
    ]
}
